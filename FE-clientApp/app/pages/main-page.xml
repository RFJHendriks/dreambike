<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" style="background-color:silver">
    <ActionBar title="DreamBike" android.icon="~/utils/small.png" android.iconVisibility="always" class="actionbar"></ActionBar>
    <ActivityIndicator busy="true"></ActivityIndicator>
    <StackLayout>
        <StackLayout class="p-20">
            <Label text="Welcome to DreamBike" class="h1 text-center" />
            <Image src="~/utils/TxtRnd.png" width="150" class="img-rounded m-b-20"></Image>
        </StackLayout>
        <StackLayout class="form">
            <StackLayout row="0" class="input-field">
                <TextField id="username" class="input" autocorrect="false" autocapitalizationType="none" returnKeyType="next" hint="Username" color="orangered" backgroundColor="lightyellow" />
                <Label class="hr-light" />
            </StackLayout>
            <StackLayout row="1" class="input-field">
                <TextField id="password" class="input" autocorrect="false" autocapitalizationType="none" returnKeyType="{{ isLoggingIn ? 'done' : 'next' }}" hint="Password" secure="true" color="orangered" backgroundColor="lightyellow" />
                <Label class="hr-light" />
            </StackLayout>
            <Button text="Login" tap="{{ onLogin }}" class="-primary -rounded-lg" />
        </StackLayout>
        <StackLayout class="p-20">
            <Button text="Rent a Bike" tap="{{ onTap }}" class="-primary -rounded-lg" />
            <Label text="{{ message }}" class="h2 text-center" textWrap="true" />
        </StackLayout>
    </StackLayout>
</Page>